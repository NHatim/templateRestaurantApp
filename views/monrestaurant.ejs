<%- include('header'); -%>
<script src="/js/liste-commande-aprep.js" defer></script>
<main class="container">
  <div class= "main-wrapper">
    <button class= "up-down"><i class="fa fa-angle-up"></i></button>
    <div class= "header header-restauration">
      <div class= "navbar">
        <a href="/"<span id= "logo-name-1">Eat <span id="logo-name-2">It </span></span></a>
          <ul class="stats">
            <li>Commande préparée(s) : <%= nbPret %></li>
            <li>Commande restante(s) : <%= nbRestant %></li>
            <li>Commande déjà livrée(s) : <%= nbLivrer %></li>
            <li class="heure"></li>
        </ul>
      </div>
      <div class= "intro intro-restaurant">
      <span id= "spn-1">
        <h1> Restaurant : <%= restaurant %> </br></br>
        </h1>
      </span>
    </div>
    </div>
    <div class= "service"><!-- div 2-->
      <h1>Liste des commandes &agrave; pr&eacute;parer</h1>
      <div class="liste-commande-aprep">
        <form onsubmit="return reponse" action="/restaurant/confirmation" method="POST">
        <ul>
          <% tableauCommande.forEach(element => { %>
            <% if (element.restaurant.nom === restaurant && element.etatCommande === "aprep") { %>
         <li nbRepas="<%=element.nbRepas %>"class="el-<%=element.numero%>">Commande n°<%=element.numero%>, prise le <%=element.date%> à
          <%=element.heure %>, Nombre Repas : <%=element.nbRepas %>
          <button name ="button"  type="submit" class="btn btn-success" value="<%=element.numero%>">Pr&ecirc;te</button></li>
          <% } %>
          <% }) %>
        </ul>
      </form>
      </div>
    </div>
    <div class= "footer"><!-- div 3-->
      <div class= "logo"></div>
      <div class= "general">
        <ul>
          <li><a href= "https://github.com/NHatim">GitHub</a></li>
          <li><a href= "mailto:hatim.naimi@gmail.com">Contactez-moi</a></li>
        </ul>
      </div>
    </div>

    <span id= "spn-4"><i class= "fa fa-copyright"></i>
    &nbsp; Copyrights to : FoodCuBo Code Pen & Modification par NAIMI Hatim
    </span>
  </div>
</main>
<%- include('footer') -%>
